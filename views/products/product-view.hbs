<div class="container py-3">
    <div class="d-flex flex-wrap justify-content-between align-items-center mb-3">
        <h4 class="mb-2 mb-md-0">List of Products</h4>
        <a href="/product/create" class="btn btn-success">
            <i class="bi bi-plus-lg"></i> Create New
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover" id="productsTable">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Product Name</th>
                    <th>SAP Code</th>
                    <th>Unit</th>
                    <th>Category</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <td>{{this.product_id}}</td>
                    <td>{{this.product_name}}</td>
                    <td>{{this.ext_code}}</td>
                    <td>{{this.unit_name}}</td>
                    <td>{{this.category_name}}</td>
                    <td class="text-center">
                        <a href="/product/update/{{this.product_id}}" class="btn btn-primary btn-sm me-1">
                            <i class="bi bi-pencil"></i>
                        </a>
                        {{#isEqual ../user.user_role "Admin"}}
                        <a href="/product/delete/{{this.product_id}}" class="btn btn-danger btn-sm"
                            onclick="return confirm('Are you sure?')">
                            <i class="bi bi-trash"></i>
                        </a>
                        {{/isEqual}}
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#productsTable').DataTable({
            pageLength: 10,
        });
    });
</script>