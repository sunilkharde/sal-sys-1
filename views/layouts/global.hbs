<!DOCTYPE html>
<html>

{{> header}}

<body>
    <div class="wrapper">
        <div class="container mt-3">
            <div class="container mb-3">
                {{#if errors}}
                <div class="alert alert-danger alert-dismissible fade show">
                    {{#each errors}}
                    <p>{{this.message}}</p>
                    {{/each}}
                </div>
                {{/if}}
            </div>

            {{{body}}}
        </div>

    </div>

    {{> footer}}
</body>

</html>