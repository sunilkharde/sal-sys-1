<div class="container">
    <div style="display: flex; justify-content: space-between; align-items: center;">
        <h4 style=" margin-bottom: 20px;">Vendor Circular</h4>
        <a href="/circular/create" class="btn btn-success">Create New</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover" id="circularTable">
            <thead>
                <tr>
                    <th>Circular Date</th>
                    <th>Circular Id</th>
                    <th>Cust Id</th>
                    <th>Customer Name</th>
                    <th>Cirular No</th>
                    <th>Veh Allowance</th>
                    <th>Days Allowed</th>
                    <th>KM / Day</th>
                    <th>Rent / Day</th>
                    <th>Driver / Day</th>
                    <th>Diesel Avg</th>
                    <th>Toll Tax</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {{#each circular}}
                <tr>
                    <td>{{momentDMY this.circular_date}}</td>
                    <td class="text-end">{{this.circular_id}}</td>
                    <td class="text-end">{{this.customer_id}}</td>
                    <td>{{this.customer_name}}</td>
                    <td class="text-end">{{this.circular_no}}</td>
                    <td class="text-end">{{this.veh_allow}}</td>
                    <td class="text-end">{{this.days_allow}}</td>
                    <td class="text-end">{{this.km_perday}}</td>
                    <td class="text-end">{{this.rent_perday}}</td>
                    <td class="text-end">{{this.driver_perday}}</td>
                    <td class="text-end">{{this.diesel_avg}}</td>
                    <td class="text-end">{{this.toll_tax}}</td>
                    <td>
                        <!-- <a href="/customer/viewByID/{{this.customer_id}}" class="btn btn-secondary btn-sm">
                        <i class="bi bi-eye"></i>
                    </a> -->
                        <a href="/circular/update/{{momentYMD this.circular_date}}/{{this.circular_id}}"
                            class="btn btn-primary btn-sm">
                            <i class="bi bi-pencil"></i>
                        </a>

                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    <script>
        $(document).ready(function () {
            $('#circularTable').dataTable({
                pageLength: 10
            });
        });
    </script>

</div>