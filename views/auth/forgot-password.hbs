<div class="container mt-1">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-12">
            <div class="card shadow border-0">
                <div class="card-body p-4 p-md-5">
                    <!-- Header -->
                    <div class="text-center mb-4">
                        <div class="bg-light rounded-circle d-inline-flex p-3 mb-3">
                            <i class="bi bi-shield-lock text-primary fs-2"></i>
                        </div>
                        <h2 class="card-title fw-bold text-primary mb-2">Forgot Password</h2>
                        <p class="text-muted">Enter your email and mobile number to reset your password</p>
                    </div>

                    {{#if alert}}
                    <div class="alert alert-{{#if (eq alert 'OTP sent successfully to your mobile number')}}success{{else}}danger{{/if}} alert-dismissible fade show"
                        role="alert">
                        <i
                            class="bi {{#if (eq alert 'OTP sent successfully to your mobile number')}}bi-check-circle-fill{{else}}bi-exclamation-triangle-fill{{/if}} me-2"></i>
                        {{alert}}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    {{/if}}

                    <form action="/auth/forgot-password/send-otp" method="POST" class="needs-validation" novalidate>
                        <div class="mb-3">
                            <label for="email_id" class="form-label fw-semibold">
                                <i class="bi bi-envelope me-2"></i>Registered Email Address
                            </label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-light">
                                    <i class="bi bi-at"></i>
                                </span>
                                <input type="email" class="form-control" id="email_id" name="email_id"
                                    placeholder="Enter your registered email" value="{{email_id}}" required>
                                <div class="invalid-feedback">
                                    Please enter a valid email address.
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label for="mobile_no" class="form-label fw-semibold">
                                <i class="bi bi-phone me-2"></i>Registered Mobile Number
                            </label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-light">
                                    <i class="bi bi-telephone"></i>
                                </span>
                                <input type="text" class="form-control" id="mobile_no" name="mobile_no"
                                    placeholder="Enter your 10-digit mobile number" value="{{mobile_no}}"
                                    pattern="[0-9]{10}" maxlength="10" required inputmode="numeric">
                                <div class="invalid-feedback">
                                    Please enter a valid 10-digit mobile number.
                                </div>
                            </div>
                            <div class="form-text">
                                <i class="bi bi-info-circle me-1"></i>
                                We'll send a verification code to this mobile number
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg fw-semibold">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                    class="bi bi-send" viewBox="0 0 16 16">
                                    <path
                                        d="M15.854.146a.5.5 0 0 1 .11.54l-5.819 14.547a.75.75 0 0 1-1.329.124l-3.178-4.995L.643 7.184a.75.75 0 0 1 .124-1.33L15.314.037a.5.5 0 0 1 .54.11ZM6.636 10.07l2.761 4.338L14.13 2.576zm6.787-8.201L1.591 6.602l4.339 2.76z" />
                                </svg>
                                <i class="bi bi-send me-2"></i>Send Verification Code
                            </button>
                        </div>
                    </form>

                    <div class="text-center mt-4">
                        <p class="text-muted mb-0">
                            Remember your password?
                            <a href="/auth/login" class="text-decoration-none fw-semibold">Back to Login</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Form validation
        const form = document.querySelector('.needs-validation');
        const mobileInput = document.getElementById('mobile_no');

        if (form) {
            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        }

        // Mobile number validation
        if (mobileInput) {
            mobileInput.addEventListener('input', function (e) {
                this.value = this.value.replace(/[^0-9]/g, '');
                if (this.value.length > 10) {
                    this.value = this.value.slice(0, 10);
                }
            });

            mobileInput.addEventListener('keypress', function (e) {
                const charCode = e.which ? e.which : e.keyCode;
                if (charCode < 48 || charCode > 57) {
                    e.preventDefault();
                    return false;
                }
            });
        }

        // Auto-hide alerts after 5 seconds
        const alerts = document.querySelectorAll('.alert');
        alerts.forEach(alert => {
            setTimeout(() => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            }, 5000);
        });
    });
</script>

<style>
    .card {
        border-radius: 1rem;
        background: linear-gradient(145deg, #ffffff 0%, #f8f9fa 100%);
    }

    /* ↓ Reduce placeholder font size */
    .form-control::placeholder {
        font-size: 0.9rem;
        /* reduced from default 1rem */
        color: #999;
    }

    .form-control:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.15);
    }

    /* ↓ Smaller Send button */
    .btn-primary {
        background: linear-gradient(135deg, #0d6efd 0%, #6610f2 100%);
        border: none;
        transition: all 0.3s ease;
        padding: 0.65rem 1.2rem !important;
        /* reduced padding */
        font-size: 1rem;
        /* slightly smaller text */
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(13, 110, 253, 0.3);
    }

    .bg-light.rounded-circle {
        background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%) !important;
    }
</style>