<div class="container mt-1">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-12">
            <div class="card shadow border-0">
                <div class="card-body p-4 p-md-5">
                    <!-- Header -->
                    <div class="text-center mb-4">
                        <div class="bg-light rounded-circle d-inline-flex p-3 mb-3">
                            <i class="bi bi-shield-check text-success fs-2"></i>
                        </div>
                        <h2 class="card-title fw-bold text-success mb-2">Verify OTP</h2>
                        <p class="text-muted">Enter the verification code sent to your mobile</p>
                    </div>

                    {{#if alert}}
                    <div class="alert alert-{{#if (eq alert 'OTP sent successfully to your mobile number')}}success{{else}}danger{{/if}} alert-dismissible fade show"
                        role="alert">
                        <i
                            class="bi {{#if (eq alert 'OTP sent successfully to your mobile number')}}bi-check-circle-fill{{else}}bi-exclamation-triangle-fill{{/if}} me-2"></i>
                        {{alert}}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    {{/if}}

                    <!-- Mobile Info -->
                    <div class="card bg-light border-0 mb-4">
                        <div class="card-body text-center">
                            <i class="bi bi-phone text-primary fs-4 me-2"></i>
                            <span class="fw-semibold">+91 {{mobile_no}}</span>
                            <small class="text-muted d-block mt-1">We've sent a 6-digit code to this number</small>
                        </div>
                    </div>

                    <form action="/auth/forgot-password/verify-otp" method="POST" class="needs-validation" novalidate>
                        <input type="hidden" name="email_id" value="{{email_id}}">
                        <input type="hidden" name="mobile_no" value="{{mobile_no}}">

                        <div class="mb-4">
                            <label for="input_otp" class="form-label fw-semibold">
                                <i class="bi bi-key me-2"></i>6-Digit Verification Code
                            </label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-light">
                                    <i class="bi bi-chat-square-text"></i>
                                </span>
                                <input type="text" class="form-control text-center" id="input_otp" name="input_otp"
                                    inputmode="numeric" pattern="[0-9]{6}" maxlength="6" placeholder="••••••" required
                                    style="font-family: 'Courier New', monospace; font-size: 1.5rem; letter-spacing: 0.5em;">
                                <div class="invalid-feedback">
                                    Please enter the 6-digit verification code.
                                </div>
                            </div>
                            <div class="form-text text-center">
                                <i class="bi bi-clock me-1"></i>
                                Code expires in 10 minutes
                            </div>
                        </div>

                        <div class="d-grid gap-2 mb-3">
                            <button type="submit" class="btn btn-success btn-lg fw-semibold py-3">
                                <i class="bi bi-check-circle me-2"></i>
                                Verify & Continue
                            </button>
                        </div>
                    </form>

                    <div class="text-center">
                        <p class="text-muted mb-2">Didn't receive the code?</p>
                        <form action="/auth/forgot-password/send-otp" method="POST" class="d-inline">
                            <input type="hidden" name="email_id" value="{{email_id}}">
                            <input type="hidden" name="mobile_no" value="{{mobile_no}}">
                            <button type="submit" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-arrow-clockwise me-1"></i>Resend OTP
                            </button>
                        </form>
                    </div>

                    <div class="text-center mt-4">
                        <a href="/auth/forgot-password" class="text-decoration-none">
                            <i class="bi bi-arrow-left me-1"></i>Use different mobile number
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const otpInput = document.getElementById('input_otp');

        // Auto-focus OTP input
        if (otpInput) {
            otpInput.focus();
        }

        // OTP input validation
        if (otpInput) {
            otpInput.addEventListener('input', function (e) {
                this.value = this.value.replace(/[^0-9]/g, '');
                if (this.value.length > 6) {
                    this.value = this.value.slice(0, 6);
                }
            });

            otpInput.addEventListener('keypress', function (e) {
                const charCode = e.which ? e.which : e.keyCode;
                if (charCode < 48 || charCode > 57) {
                    e.preventDefault();
                    return false;
                }
            });

            // Auto-submit when 6 digits are entered
            otpInput.addEventListener('input', function (e) {
                if (this.value.length === 6) {
                    this.form.submit();
                }
            });
        }

        // Form validation
        const form = document.querySelector('.needs-validation');
        if (form) {
            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        }

        // Auto-hide alerts
        const alerts = document.querySelectorAll('.alert');
        alerts.forEach(alert => {
            setTimeout(() => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            }, 5000);
        });
    });
</script>

<style>
    .card {
        border-radius: 1rem;
        background: linear-gradient(145deg, #ffffff 0%, #f8f9fa 100%);
    }

    .form-control:focus {
        border-color: #198754;
        box-shadow: 0 0 0 0.2rem rgba(25, 135, 84, 0.15);
    }

    .btn-success {
        background: linear-gradient(135deg, #198754 0%, #146c43 100%);
        border: none;
        transition: all 0.3s ease;
    }

    .btn-success:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(25, 135, 84, 0.3);
    }

    #input_otp::placeholder {
        letter-spacing: 0.3em;
        color: #6c757d;
        opacity: 0.7;
    }
</style>