<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4>Dealer-SubDealer Mapping List</h4>
                <a href="/cust-detail/create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New
                </a>
            </div>

            <table class="table table-bordered table-striped" id="dealerTable">
                <thead>
                    <tr>
                        <th>Dealer ID</th>
                        <th>Dealer Name</th>
                        <th>SAP Code</th>
                        <th>Sub-Dealers Count</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each dealers}}
                    <tr>
                        <td>{{this.customer_id}}</td>
                        <td>{{this.customer_name}}</td>
                        <td>{{this.dealer_code}}</td>
                        <td>{{this.subdealer_count}}</td>
                        <td>
                            <a href="/cust-detail/update/{{this.customer_id}}" class="btn btn-info btn-sm">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    $(document).ready(function() {
        $('#dealerTable').DataTable({
            pageLength: 10,
            responsive: true
        });
    });
</script>