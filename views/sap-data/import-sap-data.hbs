<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .card-header {
            background-color: #f8f9fa;
            font-weight: 600;
        }

        .status-badge {
            font-size: 0.85rem;
        }

        .progress {
            height: 25px;
        }
    </style>
</head>

<body>
    <div class="container py-4">
        <div class="row mb-4">
            <div class="col">
                <h1 class="display-6">SAP Data Import</h1>
                <p class="lead">Import sales data from SAP system</p>
                <a href="/sap-data/import-history" class="btn btn-outline-secondary btn-sm">
                    <i class="fas fa-history me-1"></i>View Import History
                </a>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-file-import me-2"></i>Import Parameters
            </div>
            <div class="card-body">
                <form id="importForm" action="/sap-data/import" method="POST">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label for="buId" class="form-label">Business Unit</label>
                            <select class="form-select" name="buId" id="buId">
                                <option value="">All Business Units</option>
                                {{#each businessUnits}}
                                <option value="{{this.bu_id}}">{{this.bu_name}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label for="dateFrom" class="form-label">Date From</label>
                            <input type="date" class="form-control" name="dateFrom" id="dateFrom" required>
                        </div>
                        <div class="col-md-4">
                            <label for="dateTo" class="form-label">Date To</label>
                            <input type="date" class="form-control" name="dateTo" id="dateTo" required>
                        </div>
                    </div>
                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary" id="importBtn">
                            <i class="fas fa-file-import me-2"></i>Import Data
                        </button>
                    </div>
                </form>
            </div>
        </div>

        {{#if results}}
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span><i class="fas fa-building me-2"></i>Import Results</span>
                <span class="badge bg-{{#if allSuccess}}success{{else}}warning{{/if}}" id="summaryBadge">
                    {{successCount}}/{{totalCount}} imported
                </span>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    Import Batch: <strong>{{results.0.import_batch}}</strong>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover" id="resultsTable">
                        <thead>
                            <tr>
                                <th>Business Unit</th>
                                <th>Status</th>
                                <th>Records Imported</th>
                                <th>Details</th>
                            </tr>
                        </thead>
                        <tbody id="resultsBody">
                            {{#each results}}
                            <tr>
                                <td>{{this.bu_name}}</td>
                                <td>
                                    <span
                                        class="badge bg-{{#if (eq this.status 'success')}}success{{else}}danger{{/if}} status-badge">
                                        <i
                                            class="fas fa-{{#if (eq this.status 'success')}}check-circle{{else}}exclamation-circle{{/if}} me-1"></i>
                                        {{this.status}}
                                    </span>
                                </td>
                                <td>
                                    {{#if (eq this.status 'success')}}
                                    {{this.records_imported}}
                                    {{else}}
                                    {{this.error}}
                                    {{/if}}
                                </td>
                                <td>
                                    <a href="/sap-data/import-details/{{this.import_batch}}/{{this.bu_id}}" 
                                       class="btn btn-sm btn-outline-secondary">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        {{/if}}
    </div>

    <script>
        document.getElementById('importForm').addEventListener('submit', function (e) {
            e.preventDefault();
            const formData = new FormData(this);
            const importBtn = document.getElementById('importBtn');

            // Disable button during import
            importBtn.disabled = true;
            importBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Importing...';

            fetch(this.action, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                },
                body: new URLSearchParams(formData)
            })
                .then(response => response.text())
                .then(html => {
                    document.body.innerHTML = html;
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error importing data: ' + error.message);
                })
                .finally(() => {
                    importBtn.disabled = false;
                    importBtn.innerHTML = '<i class="fas fa-file-import me-2"></i>Import Data';
                });
        });
    </script>
</body>

</html>