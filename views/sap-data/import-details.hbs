<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .table-responsive {
            max-height: 70vh;
            overflow-y: auto;
        }
        .summary-card {
            margin-bottom: 20px;
        }
    </style>
</head>

<body>
    <div class="container py-4">
        <div class="row mb-4">
            <div class="col">
                <h1 class="display-6">Import Batch Details</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/sap-data/import">SAP Import</a></li>
                        <li class="breadcrumb-item"><a href="/sap-data/import-history">Import History</a></li>
                        <li class="breadcrumb-item active" aria-current="page">{{importBatch}}</li>
                    </ol>
                </nav>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card summary-card">
                    <div class="card-header bg-primary text-white">
                        <i class="fas fa-info-circle me-2"></i>Import Summary
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-5">Business Unit:</dt>
                            <dd class="col-sm-7">{{buName}}</dd>

                            <dt class="col-sm-5">Import Batch:</dt>
                            <dd class="col-sm-7">{{importBatch}}</dd>

                            <dt class="col-sm-5">Import Date:</dt>
                            <dd class="col-sm-7">{{momentDMYHm importDate}}</dd>

                            <dt class="col-sm-5">Total Records:</dt>
                            <dd class="col-sm-7">{{records.length}}</dd>

                            <dt class="col-sm-5">Date Range:</dt>
                            <dd class="col-sm-7">{{momentDMY minDate}} to {{momentDMY maxDate}}</dd>
                        </dl>
                    </div>
                </div>
            </div>

            <div class="col-md-8">
                <div class="card summary-card">
                    <div class="card-header bg-primary text-white">
                        <i class="fas fa-chart-pie me-2"></i>Material Group Summary
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-sm table-striped">
                                <thead>
                                    <tr>
                                        <th>Material Group</th>
                                        <th>Description</th>
                                        <th class="text-end">Quantity</th>
                                        <th class="text-end">Value</th>
                                        <th class="text-end">% of Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each materialGroups}}
                                    <tr>
                                        <td>{{this.material_group}}</td>
                                        <td>{{this.material_group_description}}</td>
                                        <td class="text-end">{{formatNumber this.total_quantity 3}}</td>
                                        <td class="text-end">{{formatCurrency this.total_value}}</td>
                                        <td class="text-end">{{formatPercent this.percentage}}</td>
                                    </tr>
                                    {{/each}}
                                    <tr class="table-secondary fw-bold">
                                        <td colspan="2">Total</td>
                                        <td class="text-end">{{formatNumber totalQuantity 3}}</td>
                                        <td class="text-end">{{formatCurrency totalValue}}</td>
                                        <td class="text-end">100%</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <div>
                    <i class="fas fa-table me-2"></i>Sales Records
                </div>
                <div>
                    <button class="btn btn-sm btn-outline-secondary" id="exportBtn">
                        <i class="fas fa-download me-1"></i>Export
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover table-striped" id="recordsTable">
                        <thead>
                            <tr>
                                <th>Billing Date</th>
                                <th>Doc. No.</th>
                                <th>Customer</th>
                                <th>Material</th>
                                <th>Description</th>
                                <th class="text-end">Qty</th>
                                <th class="text-end">Price</th>
                                <th class="text-end">Value</th>
                                <th>Sales Emp</th>
                                <th>Location</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each records}}
                            <tr>
                                <td>{{momentDMY this.billing_date}}</td>
                                <td>{{this.document_number}}</td>
                                <td>{{this.customer_number}}</td>
                                <td>{{this.material_number}}</td>
                                <td>{{this.material_description}}</td>
                                <td class="text-end">{{formatNumber this.quantity 3}}</td>
                                <td class="text-end">{{formatCurrency this.item_price}}</td>
                                <td class="text-end">{{formatCurrency (multiply this.quantity this.item_price)}}</td>
                                <td>{{this.sales_employee_name}}</td>
                                <td>{{this.district}}</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer text-muted">
                Showing {{records.length}} records
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/xlsx@0.18.5/dist/xlsx.full.min.js"></script>
    <script>
        document.getElementById('exportBtn').addEventListener('click', function() {
            const table = document.getElementById('recordsTable');
            const wb = XLSX.utils.table_to_book(table);
            XLSX.writeFile(wb, `SAP_Import_Details_${new Date().toISOString().slice(0,10)}.xlsx`);
        });
    </script>
</body>

</html>