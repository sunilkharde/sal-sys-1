<script>
    function adjustFontSize() {
        var screenWidth = window.innerWidth || document.documentElement.clientWidth || document.body.clientWidth;

        var imgLogo = document.getElementById('imgLogo');
        if (screenWidth < 768) {
            imgLogo.width = '60';
            imgLogo.height = '80';
        } else if (screenWidth >= 768 && screenWidth < 1024) {
            imgLogo.width = '60';
            imgLogo.height = '80';
        } else {
            imgLogo.width = '42';
            imgLogo.height = '60'; /*60*/
        }

        var txtItems = document.getElementsByClassName('page-title');
        for (var i = 0; i < txtItems.length; i++) {
            var txtItem = txtItems[i];
            if (screenWidth < 768) {
                txtItem.style.fontSize = '60px';
            } else if (screenWidth >= 768 && screenWidth < 1024) {
                txtItem.style.fontSize = '60px';
            } else {
                txtItem.style.fontSize = '45px'; /*45*/
            }
        }

        var navLinks = document.getElementsByClassName('nav-link');
        for (var i = 0; i < navLinks.length; i++) {
            var navLink = navLinks[i];
            if (screenWidth < 768) {
                console.log('Small screen detected');
                navLink.style.fontSize = '50px';
            } else if (screenWidth >= 768 && screenWidth < 1024) {
                console.log('Medium screen detected');
                navLink.style.fontSize = '50px';
            } else {
                console.log('Large screen detected');
                navLink.style.fontSize = '25px'; /*25*/
            }
        }

        var navDropdowns = document.getElementsByClassName('dropdown-item');
        for (var i = 0; i < navDropdowns.length; i++) {
            var navDropdown = navDropdowns[i];
            if (screenWidth < 768) {
                navDropdown.style.fontSize = '50px';
            } else if (screenWidth >= 768 && screenWidth < 1024) {
                navDropdown.style.fontSize = '50px';
            } else {
                navDropdown.style.fontSize = '25px'; /*25*/
            }
        }

        var navTexts = document.getElementsByClassName('navbar-text');
        for (var i = 0; i < navTexts.length; i++) {
            var navText = navTexts[i];
            if (screenWidth < 768) {
                navText.style.fontSize = '50px';
            } else if (screenWidth >= 768 && screenWidth < 1024) {
                navText.style.fontSize = '50px';
            } else {
                navText.style.fontSize = '25px'; /*25*/
            }
        }

