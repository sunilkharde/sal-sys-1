                                {{/if}}
                            </td>
                            <td class="text-end">{{formatNumber this.lastYearQty}}</td>
                            <td class="text-end">{{formatNumber this.currentYearQty}}</td>
                            <td
                                class="text-end {{#if (gt this.growth_percent 0)}}text-success{{else if (lt this.growth_percent 0)}}text-danger{{/if}}">
