                        </tr>
                    </thead>
                    <tbody>
                        {{#if topCustomers.length}}
                        {{#each topCustomers}}
                        <tr class="{{#eq this.ext_code_key ../data.ext_code_key}}table-primary{{/eq}}">
                            <td class="text-end">
                                {{this.sales_rank}}
                                {{!-- {{#eq this.ext_code_key ../data.ext_code_key}}
                                <span class="badge bg-primary ms-1">You</span>
                                {{/eq}} --}}
                            </td>
                            <td>{{this.customer_name}}</td>
                            <td>{{this.city}}</td>
