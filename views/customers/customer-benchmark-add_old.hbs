<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-10 border p-4">
            <h4 class="mb-3">Add Customer Benchmark</h4>

            {{#if errors}}
                <div class="alert alert-danger">
                    {{#each errors}}
                        <div>{{this.message}}</div>
                    {{/each}}
                </div>
            {{/if}}

            <form action="/customer/benchmark/add" method="post">
                <div class="row mb-3">
                    <label for="customer_id" class="col-sm-3 col-form-label">Customer<span style="color: red;">*</span></label>
                    <div class="col-sm-9">
                        <select class="form-select" id="customer_id" name="customer_id" required>
                            <option value="">-- Select Customer --</option>
                            {{#each mainDealers}}
                            <option value="{{this.customer_id}}">{{this.customer_name}} - {{this.customer_id}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="cust_bench_id" class="col-sm-3 col-form-label">Benchmark Customer<span style="color: red;">*</span></label>
                    <div class="col-sm-9">
                        <select class="form-select" id="cust_bench_id" name="cust_bench_id" required>
                            <option value="">-- Select Benchmark Customer --</option>
                            {{#each subDealers}}
                            <option value="{{this.customer_id}}">{{this.customer_name}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-9 offset-sm-3">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <button type="button" class="btn btn-secondary" onclick="window.location.href='/customer/benchmark'">Cancel</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>