<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h4>Customer Benchmark List</h4>
                <a href="/customer/benchmark/add" class="btn btn-primary">Add Benchmark</a>
            </div>

            {{#if benchmarks.length}}
            <div class="table-responsive">
                <table class="table table-striped table-hover" id="benchmarksTable">
                    <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>Customer</th>
                            <th>Benchmark Customer</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each benchmarks}}
                        <tr>
                            <td>{{this.sr_no}}</td>
                            <td>{{this.main_customer_name}}</td>
                            <td>{{this.benchmark_customer_name}}</td>
                            <td>
                                <a href="/customer/benchmark/delete/{{this.customer_id}}/{{this.sr_no}}"
                                    class="btn btn-danger btn-sm"
                                    onclick="return confirm('Are you sure you want to delete this benchmark?')">
                                    Delete
                                </a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            {{else}}
            <div class="alert alert-info">No benchmark records found.</div>
            {{/if}}
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#benchmarksTable').DataTable({
            pageLength: 10,
            lengthMenu: [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]],
            responsive: true,
            dom: '<"top"lf>rt<"bottom"ip>',
            language: {
                search: "_INPUT_",
                searchPlaceholder: "Search benchmarks...",
                paginate: {
                    previous: "&laquo;",
                    next: "&raquo;"
                }
            }
        });
    });
</script>