<div class="container">
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="card shadow-sm mb-4">
                <div class="card-header {{#if isNextMonth}}bg-success{{else}}bg-primary{{/if}} text-white">
                    <div class="row align-items-center">
                        <div class="col">
                            <h1 class="card-title mb-0">Hi, {{mgData.emp_name}}</h1>
                        </div>
                        <div class="col-auto">
                            <span
                                class="badge bg-light {{#if isNextMonth}}text-success{{else}}text-primary{{/if}} fs-6">
                                {{#if isNextMonth}}Next Month Planning{{else}}Current Month Planning{{/if}}
                            </span>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h2 class="{{#if isNextMonth}}text-success{{else}}text-primary{{/if}}">
                                {{monData.month_name}} {{monData.year}}
                            </h2>
                        </div>
                        <div class="col-md-6 text-end">
                            <span class="badge bg-info fs-6">Team: {{teamSize}} members</span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <p class="mb-1"><strong>Designation:</strong> {{mgData.desg_name}}</p>
                        <p class="mb-1"><strong>HQ:</strong> {{mgData.hq_name}}</p>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-12">
            <div class="alert {{#if isNextMonth}}alert-success{{else}}alert-info{{/if}}">
                <div class="d-flex align-items-center">
                    <i class="bi bi-info-circle-fill me-2 fs-5"></i>
                    <span class="fs-6">
                        {{#if isNextMonth}}
                        Plan your team's tour routes for next month: {{monData.month_name}} {{monData.year}}
                        {{else}}
                        Manage your team's tour routes for current month: {{monData.month_name}} {{monData.year}}
                        {{/if}}
                    </span>
                </div>
            </div>
        </div>
    </div>

    <input type="hidden" id="open_year" name="open_year" value="{{monData.year}}">
    <input type="hidden" id="open_month" name="open_month" value="{{monData.month}}">

    <!-- Month Navigation -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <div class="btn-group" role="group">
                <a href="/dsrTp/view-pm"
                    class="btn {{#unless isNextMonth}}btn-primary{{else}}btn-outline-primary{{/unless}}">
                    <i class="bi bi-calendar-check me-2"></i>
                    Current Month
                </a>
                <a href="/dsrTp/view-pm?next_month=true"
                    class="btn {{#if isNextMonth}}btn-success{{else}}btn-outline-success{{/if}}">
                    <i class="bi bi-calendar-plus me-2"></i>
                    Next Month
                </a>
            </div>
        </div>
    </div>

    <div class="row g-3" style="max-height: 70vh; overflow-y: auto;">
        {{#each empList}}
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h5 class="card-title {{#if ../isNextMonth}}text-success{{else}}text-primary{{/if}} mb-2">
                                {{this.emp_name}}
                            </h5>
                            <div class="row text-muted">
                                <div class="col-6">
                                    <small><strong>Designation:</strong> {{this.desg_name}}</small>
                                </div>
                                <div class="col-6">
                                    <small><strong>HQ:</strong> {{this.hq_name}}</small>
                                </div>
                            </div>
                            <div class="row text-muted mt-1">
                                <div class="col-6">
                                    <small><strong>Week Off:</strong> {{this.off_day}}</small>
                                </div>
                                <div class="col-6">
                                    <small><strong>Status:</strong>
                                        {{#if this.tp_count}}
                                        <span class="badge bg-success">({{this.tp_count}} days)</span>
                                        {{else}}
                                        <span class="badge bg-warning text-dark">Not Planned</span>
                                        {{/if}}
                                    </small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 text-end mt-1 mt-md-0">
                            <a href="/dsrTp/update/{{../monData.year}}/{{../monData.month}}/{{this.emp_id}}{{#if ../isNextMonth}}?next_month=true{{/if}}"
                                class="btn {{#if ../isNextMonth}}btn-success{{else}}btn-primary{{/if}} btn-sm">
                                <i class="bi {{#if this.tp_count}}bi-pencil{{else}}bi-plus-circle{{/if}} me-2"></i>
                                {{#if this.tp_count}}Edit{{else}}Plan{{/if}} Routes
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>

    <div class="row mt-4">
        <div class="col-12 text-center">
            <button type="button" class="btn btn-outline-info" onclick="window.location.reload()">
                <i class="bi bi-arrow-clockwise me-2"></i>
                Refresh
            </button>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 15px;
        transition: transform 0.2s ease-in-out;
    }

    .card:hover {
        transform: translateY(-2px);
    }

    .badge {
        font-size: 0.8em;
    }

    .btn {
        border-radius: 8px;
        font-weight: 500;
    }

    .alert {
        border-radius: 10px;
        border: none;
    }
</style>